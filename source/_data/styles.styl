// =============================================
// 文章相关样式
// =============================================

// 文章标题样式
.posts-expand .post-title {
  font-size: 1.8rem;
  font-weight: 700;
  color: #2c3e50 !important;
  margin-bottom: 10px;
  transition: color 0.3s ease;
  text-shadow: none !important;
}

.posts-expand .post-title:hover {
  color: #3498db !important;
}

// 文章卡片基础样式
.post-block {
  background: rgba(255, 255, 255, 0.92);
  border-radius: 15px;
  padding: 30px;
  margin-bottom: 35px;
  box-shadow: 0 8px 35px rgba(0, 0, 0, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.3);
  transition: all 0.4s ease;
  position: relative;
  overflow: hidden;
  animation: fadeInUp 0.6s ease;
}

// 主页文章特殊效果
body.home .post-block::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
  transition: left 0.6s ease;
}

body.home .post-block:hover::before {
  left: 100%;
}

body.home .post-block:hover {
  transform: translateY(-8px) scale(1.02);
  box-shadow: 0 15px 50px rgba(0, 0, 0, 0.2);
}

// 文章页面禁用特殊效果
body.post .post-block {
  transition: none !important;
}

body.post .post-block:hover {
  transform: none !important;
  box-shadow: 0 8px 35px rgba(0, 0, 0, 0.1) !important;
}

body.post .post-block::before {
  display: none !important;
}

// 阅读更多按钮
.post-button {
  margin-top: 20px;
}

.post-button .btn {
  background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
  color: white;
  border: none;
  border-radius: 25px;
  padding: 8px 20px;
  font-weight: 500;
  transition: all 0.3s ease;
}

.post-button .btn:hover {
  transform: translateY(-1px);
  box-shadow: 0 4px 15px rgba(52, 152, 219, 0.4);
}

// =============================================
// 页脚样式
// =============================================

.footer {
  background: linear-gradient(135deg, rgba(44, 62, 80, 0.92) 0%, rgba(52, 73, 94, 0.95) 100%) !important;
  backdrop-filter: blur(15px);
  border-top: 1px solid rgba(255, 255, 255, 0.15);
  color: #ecf0f1;
  padding: 30px 0;
  margin-top: 50px;
}

// =============================================
// 通用组件样式
// =============================================

// 按钮样式
.btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  border-radius: 25px;
  padding: 10px 25px;
  color: white;
  font-weight: 500;
  transition: all 0.3s ease;
  box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
}

.btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(102, 126, 234, 0.5);
  color: white;
}

// 图片响应式
img {
  max-width: 100%;
  height: auto;
  border-radius: 4px;
}

// 链接样式
a {
  color: #3498db;
  // color: #db3434;
  text-decoration: none;
  transition: color 0.3s ease;
}

a:hover {
  // color: #2980b9;
  color: #b92929;
  text-decoration: underline;
}

// =============================================
// 滚动条美化
// =============================================

::-webkit-scrollbar {
  width: 10px;
}

::-webkit-scrollbar-track {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 5px;
}

::-webkit-scrollbar-thumb {
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 5px;
  border: 2px solid rgba(255, 255, 255, 0.2);
}

::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(135deg, #5a6fd8, #6a4190);
}

// =============================================
// 动画效果
// =============================================

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

// =============================================
// 响应式设计
// =============================================

@media (max-width: 767px) {
  .main-inner {
    margin: 10px;
    padding: 20px;
    border-radius: 10px;
  }
  
  .sidebar {
    background: rgba(40, 44, 52, 0.98) !important;
    border-radius: 0;
  }
  
  .post-block {
    padding: 20px;
    margin-bottom: 25px;
  }
}

