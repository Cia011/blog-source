// 博客自定义样式 - 美化博客界面
// =============================================

// 全局背景设置
body {
  background-image: url('/images/bj1.jpg');
  background-size: cover;
  background-attachment: fixed;
  background-position: center;
  background-repeat: no-repeat;
  min-height: 100vh;
}

// 主内容区域样式
.main-inner {
  background: rgba(255, 255, 255, 0.85);
  border-radius: 15px;
  margin: 20px;
  padding: 25px;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
  backdrop-filter: blur(12px);
  border: 1px solid rgba(255, 255, 255, 0.3);
}

// =============================================
// 导航栏样式
// =============================================

.header {
  // background: linear-gradient(135deg, rgba(102, 126, 234, 0.92) 0%, rgba(118, 75, 162, 0.95) 100%) !important;
  background: linear-gradient(135deg, rgba(135, 191, 202 , 0.5) 0%, rgba(135, 191, 202 , 0.5) 100%) !important;
  backdrop-filter: blur(15px);
  box-shadow: 0 5px 30px rgba(0, 0, 0, 0.3);
  border-bottom: 1px solid rgba(255, 255, 255, 0.2);
  position: relative;
  z-index: 1000;
}

.site-title {
  font-weight: 700;
  color: white !important;
}

// 导航菜单样式
.menu .menu-item a {
  color: rgba(255, 255, 255, 0.9) !important; //导航栏文字颜色
  transition: color 0.3s ease;
}

.menu .menu-item a:hover {
  color: white !important;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 4px;
}

// 菜单激活状态
.menu .menu-item a.menu-item-active {
  color: rgb(59, 153, 182) !important;
  background: rgba(255, 255, 255, 0.5) !important;
  border-radius: 4px;
}

